# Makefile that builds holberton executable
CC		= 	gcc
SRC		= 	main.c holberton.c
OBJ		= 	$(SRC:.c=.o)
NAME	=	holberton
RM		=	rm
CFLAGS	= 	-Wall -Werror -Wextra -pedantic

all: $(OBJ)
	$(CC) $(CFLAGS) $(OBJ) -o $(NAME)
.o:
	$(CC) $(CFLAGS) -c -o $@.o $<

clean:
	$(RM) -f *~ $(NAME)
oclean:
	$(RM) -f *.o
fclean:
	$(RM) -f *.o *~ $(NAME)
re: oclean *.o all
